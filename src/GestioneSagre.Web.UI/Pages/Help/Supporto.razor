@page "/help/supporto"
@using GestioneSagre.Web.UI.Components
@using GestioneSagre.Web.UI.Services.Supporto
@inject ISupportoService supportoService

<h1>Richiesta di supporto</h1>
<div class="testo"><br /></div>

<MudAlert Severity="Severity.Warning" Dense="true">
    <b>ATTENZIONE:</b> Per inviare la richiesta di supporto, &egrave; necessaria una connessione ad internet attiva.
</MudAlert>

<div class="testo"><br /></div>
<AlertMessage tipoAlert="@typeAlert" testo="@textAlert"></AlertMessage>

<div class="testo"><br /></div>
<EditForm Model="@model" OnValidSubmit="Submit">
    <div class="row">
        <div class="col-md-8"><DataAnnotationsValidator />
        <ValidationSummary /></div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="form-group mb-3">
                <MudTextField @bind-Value="model.MittenteNominativo" Label="Nominativo" Variant="Variant.Outlined" />
                <ValidationMessage For="@(() => model.MittenteNominativo)" />
            </div>

            <div class="form-group mb-3">
                <MudTextField @bind-Value="model.MittenteEmail" Label="Indirizzo Email" Variant="Variant.Outlined" />
                <ValidationMessage For="@(() => model.MittenteEmail)" />
            </div>

            <div class="form-group mb-3">
                <MudTextField @bind-Value="model.Oggetto" Label="Oggetto" Testo="Richiesta di supporto" ReadOnly="true" Disabled="true" Variant="Variant.Outlined" />
                @*<ValidationMessage For="@(() => model.Oggetto)" />*@
            </div>

            <div class="form-group mb-3">
                <MudTextField @bind-Value="model.Messaggio" Label="Messaggio" Lines="5" Variant="Variant.Outlined" />
                <ValidationMessage For="@(() => model.Messaggio)" />
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-outline-primary">Invia richiesta</button>
        <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">Annulla</button>
    </div>
</EditForm>