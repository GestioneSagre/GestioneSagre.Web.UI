<PageTitle>Gestione Sagre</PageTitle>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        @foreach (var item in listItems)
        {
            if (i != count -1)
            {
                <li class="breadcrumb-item breadcustom">@item</li>
            }
            else
            {
                <li class="breadcrumb-item active" aria-current="page">@item</li>
            }

            i++;
        }
    </ol>
</nav>

@code {
    //Esempio: "Home Page;Help;Informazioni"
    [Parameter] public string voiceMenu { get; set; }

    public string[] listItems;
    public int i = 0;
    public int count = 0;

    protected override async Task OnInitializedAsync()
    {
        listItems = voiceMenu.Split(';');
        count = listItems.Count();

        await Task.FromResult(count);
    }
}